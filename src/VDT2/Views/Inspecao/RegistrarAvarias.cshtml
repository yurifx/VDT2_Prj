                                    <td><button type="button" class="btn btn-sm btn-default" value="@item.InspAvaria_ID" onclick="Btn_Click_EditarAvaria(this.value)">Editar</button></td>
                                    <td>@item.Area_Pt</td>
                                    <td>@item.Dano_Pt</td>
                                </tr>
                            }
                        }
