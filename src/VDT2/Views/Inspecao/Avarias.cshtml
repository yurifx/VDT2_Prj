@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model VDT2.ViewModels.VisualizarAvariasViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" id="">
        <h4>Chassi: @Model.VIN_6  - ID: @Model.InspVeiculo_ID</h4>
        <p>Avarias neste CheckPoint</p>
        <table class="table table-striped table-bordered table-hover">
            <tr class="danger">
                <th>Área</th>
                <th>Condicao</th>
                <th>Dano</th>
                <th>Gravidade</th>
                <th>Quadrante</th>
                <th>Severidade</th>
                <th>Editar</th>

            </tr>
            @foreach (var item in Model.Avarias)
                {
                @if (item.InspVeiculo_ID.Equals(Model.InspVeiculo_ID))
                    {
                    <tr>
                        <td>@item.Area_Pt</td>
                        <td>@item.Condicao_Pt</td>
                        <td>@item.Dano_Pt</td>
                        <td>@item.Gravidade_Pt</td>
                        <td>@item.Quadrante_Pt</td>
                        <td>@item.Severidade_Pt</td>
                        <td><span class="glyphicon glyphicon-wrench" id="@item.Inspecao_ID"></span></td>
                    </tr>
                    }
                }
        </table>
    </div>
</div>


<div class="container">
    <div class="row" id="">
        <p>Avarias em Outros CheckPoints</p>
        <table class="table table-striped table-bordered table-hover">
            <tr class="warning">
                <th>Área</th>
                <th>Condicao</th>
                <th>Dano</th>
                <th>Gravidade</th>
                <th>Quadrante</th>
                <th>Severidade</th>

            </tr>
            @foreach (var item in Model.Avarias)
                {
                @if (!item.InspVeiculo_ID.Equals(Model.InspVeiculo_ID))
                    {
                    <tr>
                        <td>@item.Area_Pt</td>
                        <td>@item.Condicao_Pt</td>
                        <td>@item.Dano_Pt</td>
                        <td>@item.Gravidade_Pt</td>
                        <td>@item.Quadrante_Pt</td>
                        <td>@item.Severidade_Pt</td>
                    </tr>
                    }
                }
        </table>
    </div>
</div>

