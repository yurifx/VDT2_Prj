        </div>
        <div class="col col-lg-3 col-md-3 col-sm-8 col-xs-5">
            <select id="ListaModelo" name="Modelo_ID" class="form-control" required
                    asp-items="@Model.ListaModelo" value="@Model.Modelo_ID">
                @*<option> Selecione um Modelo</option>*@
