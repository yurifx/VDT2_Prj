@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model VDT2.ViewModels.ConsultaViewModel

@{
    Layout = "~/Views/Shared/_LayoutConferencia.cshtml";
}
<br />

@*Chassi*@
<div class="form-group" id="divChassi">
    <div class="row">
        <div class="col col-lg-2 col-md-2 col-sm-3 col-xs-4">
            <label asp-for="VIN_6" id="lblChassiTelaVeiculo">Chassi</label>
        </div>

        <div class="col col-lg-10 col-md-10 col-sm-9 col-xs-8">
            <div class="input-group">
                <input asp-for="VIN_6" id="chassiInput" data-toggle="tooltip" title="Insira o Chassi do Veículo!" placeholder="" value="@Model.VIN_6" maxlength="6" required pattern=".{6,6}" class="form-control" autocomplete="off" onchange="ValidarChassi()" /><span id="chassiSuccess" class="glyphicon glyphicon-remove form-control-feedback"></span>
            </div>
        </div>
    </div>
</div>

@*Local Inspeção*@
<div class="row form-group">
    <div class="col col-lg-2 col-md-2 col-sm-2 col-xs-3">
        <label for="ListaLocalInspecao">Local Inspeção</label>
    </div>
    <div class="col col-lg-10 col-md-10 col-sm-10 col-xs-9">
        <select id="ListaLocalInspecao" name="LocalInspecao_ID" class="form-control" onchange="PreencheListaCheckPoint()"
                asp-items="@(new SelectList(Model.ListaLocalInspecao,"LocalInspecao_ID","Nome"))">
            <option disabled selected>Selecione Local</option>
        </select>
    </div>
</div>

@*Local CheckPoint*@
<div class="row form-group">
    <div class="col col-lg-2 col-md-2 col-sm-2 col-xs-3">
