<div class="container hidden">
    <div class="row">
        <div class="form-group">

            @if (Model.ListaImagemAvarias != null)
            {
                @if (Model.ListaImagemAvarias.Count() > 0)
                {
                    @if (Model.ListaImagemAvarias.FirstOrDefault().Erro != true)
                    {
                        <h4 id=""><strong>Fotos</strong></h4>
                    }
                    @foreach (var item in Model.ListaImagemAvarias)
                    {
                        @if (item.Erro != true)
                        {
                            <div class="row" id="@item.Imagem">
                                <div class="col-md-12">
                                    <img class="imgTelaConferenciaVisualizarFotos img-thumbnail" style="max-width: 500px; width: 380px; max-height:500px; height:500px" src="~/Inspecao/Foto?imagem=@item.Imagem&inspAvaria_ID=@Model.InspAvaria.InspAvaria_ID" />
                                </div>
                                <div class="col-md-12">
                                    <button type="button" class="btn btn-sm btn-danger" value="@item.Imagem _ @Model.InspAvaria.InspAvaria_ID" onclick='removerImagemAvaria(this.value)'>Remover Imagem</button>
                                </div>
                            </div><br /><br /><br />
                        }
                    }
                }
                else
                {
                    <h4><strong>Não há fotos enviadas para esta avaria</strong></h4>
                    <button type="button" class="btn btn-primary" onclick="history.go(-1)">Voltar</button>
                }
            }

        </div>
    </div>
</div>

@if (Model.ListaImagemAvarias != null)
{
    @if (Model.ListaImagemAvarias.Count() > 0)
    {
        @if (Model.ListaImagemAvarias.FirstOrDefault().Erro == false)
        {
            <h4 id="lblFotosVisualizarFotosAvaria"><strong>Fotos</strong></h4>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.ListaImagemAvarias.Count(); i++)
                    {
                        <li data-target="#myCarousel" data-slide-to="@i"></li>
                    }

                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    @{var a = 0; }
                    @foreach (var item in @Model.ListaImagemAvarias)
                    {
                        <div class="imagensAvariaVisualizarFotos item active" id="id_divimagem_@a">
                            <img class="img-thumbnail" style="max-width: 1200px; width: 1200px; max-height:700px; height:700px" src="~/Inspecao/Foto?imagem=@item.Imagem&inspAvaria_ID=@Model.InspAvaria.InspAvaria_ID" alt="">
                            <div style="padding-left: 40%;margin-top:30px;">
                                <button type="button" class="btn btn btn-danger" value="@item.Imagem _ @Model.InspAvaria.InspAvaria_ID" onclick='removerImagemAvaria(this.value, @a)'>Remover Imagem</button>
                            </div>
                        </div>
                        a = a + 1;
                    }
                </div>


                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
      }
